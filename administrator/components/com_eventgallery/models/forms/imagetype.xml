<?xml version="1.0" encoding="utf-8"?>
<form name="imagetype">
    <fieldset name="general" label="COM_EVENTGALLERY_EVENTS_OPTIONS_DETAILS_LABEL" description="COM_EVENTGALLERY_EVENTS_OPTIONS_DETAILS_DESC">
    	<field name="id" type="hidden" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>
			
        <field name="name"
               type="text"
               label="COM_EVENTGALLERY_IMAGETYPE_NAME"
               description="COM_EVENTGALLERY_IMAGETYPE_NAME_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_NAME_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />
        <field name="displayname"
               type="localizabletext"
               label="COM_EVENTGALLERY_IMAGETYPE_DISPLAYNAME"
               description="COM_EVENTGALLERY_IMAGETYPE_DISPLAYNAME_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_DISPLAYNAME_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />
		    <field name="description"
               type="localizabletext"
               inputtype="textarea"
               label="COM_EVENTGALLERY_IMAGETYPE_DESCRIPTION"
               description="COM_EVENTGALLERY_IMAGETYPE_DESCRIPTION_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_DESCRIPTION_PLACEHOLDER"
               required="false"
               validate=""
               class="input-xlarge"
               filter="JComponentHelper::filterText"
                /> 
                
        <field name="note"
               type="textarea"
               label="COM_EVENTGALLERY_IMAGETYPE_NOTE"
               description="COM_EVENTGALLERY_IMAGETYPE_NOTE_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_NOTE_PLACEHOLDER"
               required="false"
               validate=""
               class="input-xlarge"
                />               
         
         <field name="size"
               type="text"
               label="COM_EVENTGALLERY_IMAGETYPE_SIZE"
               description="COM_EVENTGALLERY_IMAGETYPE_SIZE_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_SIZE_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />  
                
         <field name="taxrate"
               type="number"
               label="COM_EVENTGALLERY_IMAGETYPE_TAXRATE"
               description="COM_EVENTGALLERY_IMAGETYPE_TAXRATE_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_TAXRATE_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />  
          <field name="price"
               type="text"
               label="COM_EVENTGALLERY_IMAGETYPE_PRICE"
               description="COM_EVENTGALLERY_IMAGETYPE_PRICE_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_PRICE_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />         
         <!--<field name="currency"
               type="text"
               label="COM_EVENTGALLERY_IMAGETYPE_CURRENCY"
               description="COM_EVENTGALLERY_IMAGETYPE_CURRENCY_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPE_CURRENCY_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                /> -->
         <field name="isdigital" type="radio" class="btn-group" default="0" label="COM_EVENTGALLERY_IMAGETYPE_ISDIGITAL" description="COM_EVENTGALLERY_IMAGETYPE_ISDIGITAL_DESCRIPTION">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
         
         <field name="published" type="radio" class="btn-group" default="0" label="COM_EVENTGALLERY_EVENTS_PUBLISHED" description="COM_EVENTGALLERY_EVENTS_PUBLISHED_DESCRIPTION">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
                
         
    </fieldset>
</form>
